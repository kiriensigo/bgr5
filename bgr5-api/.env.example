# Google OAuth2の設定
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# メール送信設定
GMAIL_USERNAME=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-digit-app-password
USE_LETTER_OPENER=true  # 開発環境ではtrueを推奨

# アプリケーションの設定
FRONTEND_URL=http://localhost:3001
API_URL=http://localhost:3000

# Rails環境設定
RAILS_ENV=development

# データベース設定
DATABASE_URL=postgresql://username:password@yourcluster.cockroachlabs.cloud:26257/your_db_name?sslmode=verify-full&sslrootcert=root.crt

# セキュリティ設定
DEVISE_JWT_SECRET_KEY=generate_a_secure_key_here

# CORSの設定
CORS_ORIGINS=http://localhost:3001

# Railsアプリ設定
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true
SECRET_KEY_BASE=your_secret_key_base

# APIキー
# 実際の値に置き換えてください
DEEPL_API_KEY=your_deepl_api_key

# 認証関連（必要な場合）
JWT_SECRET_KEY=your_jwt_secret_key

# その他アプリ固有の設定
FRONTEND_URL=https://your-frontend-url.vercel.app 